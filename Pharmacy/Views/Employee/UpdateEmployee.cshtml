@model Domain.Entities.Employee
@{
    string a = "";
    if (Model.DateOfBirth != null) {
        DateTime t = (DateTime) Model.DateOfBirth;
        a = t.ToString("yyyy-MM-dd");
    }
}
<div class="row">
     <input value="@Model.Id" id="updateid" hidden type="text" name="id" class="form-control" placeholder="نام">
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>نام</label>
            <input required value="@Model.FirstName" id="updateFirstname" type="text" name="firstName" class="form-control" placeholder="نام">
            <div class="valid-feedback">پر شد</div>
            <div class="invalid-feedback">نام نمیتواند خالی باشد!</div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>تخلص</label>
            <input required value="@Model.LastName" id="updateLastname" type="text" name="lastName" class="form-control" placeholder="تخلص">
            <div class="valid-feedback">پر شد</div>
            <div class="invalid-feedback">تخلص نمیتواند خالی باشد!</div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>تاریخ تولد</label>
            <input value="@a" id="updateDateOfBirth" type="date" name="dateOfBirth" class="form-control" placeholder="تاریخ تولد">
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>آدرس</label>
            <input value="@Model.Address" id="updateAdddress" type="text" name="address" class="form-control" placeholder="آدرس">
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>موبایل</label>
            <input value="@Model.Mobile" id="updateMobile" type="text" name="mobile" class="form-control" placeholder="موبایل">
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>ایمیل</label>
            <input value="@Model.Email" id="updateEmail" type="text" name="email" class="form-control" placeholder="ایمیل">
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>عکس</label>
            <input  value="@Model.Photo" id="updatePhoto" type="file" accept="image/*" name="photo" class="form-control" placeholder="عکس">
        </div>
    </div>
</div>