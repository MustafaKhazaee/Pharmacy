@model Domain.Entities.Company
<div class="row">
     <input value="@Model.Id" id="updateid" hidden type="text" name="id" class="form-control" placeholder="نام">
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>نام</label>
            <input required value="@Model.Name" id="updateFirstname" type="text" name="name" class="form-control" placeholder="نام">
            <div class="valid-feedback">پر شد</div>
            <div class="invalid-feedback">نام نمیتواند خالی باشد!</div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="form-group">
            <label>توضیحات</label>
            <input required value="@Model.Description" id="updateLastname" type="text" name="description" class="form-control" placeholder="توضیحات">
        </div>
    </div>
</div>